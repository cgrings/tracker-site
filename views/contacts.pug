extends layout.pug

block content
  h2=message
  table(class="table table-hover")
    thead
      tr
        th Name
        th E-mail
        th Tracked Pages
    each contact in contacts
      tr
        td=contact.name
        td=contact.email
        td
          a(href=`contacts/${contact.tracker}/pages`) Visited Pages
  a(href='/') Back to Home
